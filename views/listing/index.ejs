    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-md-1">
        <% for(let listing of alllisting) { %>
      <a class="listing-link" href="/listing/<%=listing._id %> ">
          <div class="card cols">
             <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                 <p class="card-text">
                 <b><%= listing.title %> <br></b>
                  &#x20b9; <%= listing.price.toLocaleString("en-IN") %> /Night<br>
                 </p>
              </div>
            </div>
        </a>
        <% } %>
    </div>
    
