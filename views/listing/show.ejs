<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/star.css" />

<div class="container mt-4 mb-4">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <h3 class="text-center mb-4 fw-semibold"> Listing Details</h3>
      <div class="card shadow-sm border-0 mb-4">
        <img 
          src="<%= listing.image && listing.image.url ? listing.image.url : 'https://tse1.mm.bing.net/th/id/OIP.FtudhIBH-HYhxMpS4TU-sAHaE8?rs=1&pid=ImgDetMain' %>" 
          class="card-img-top img-fluid rounded-top"
          alt="Listing Image" 
          style="height: 300px; width: 500px;  object-fit: cover;"
        />

        <div class="card-body">
          <h4 class="card-title fw-bold"><%= listing.title %></h4>
          
          <% if (listing.owner) { %>
            <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
          <% } %>

          <p class="card-text"><%= listing.description || "No description provided." %></p>
          <p class="fw-bold text-success mb-1">â‚¹ <%= listing.price.toLocaleString("en-IN") %> / Night</p>
          <p><b> Location:</b> <%= listing.location || 'Not specified' %></p>
          <p><b> Country:</b> <%= listing.country || 'Not specified' %></p>
        </div>
      </div>

      <% if(currentUser && listing.owner && listing.owner._id.equals(currentUser._id)) { %>
      <div class="d-flex justify-content-between mb-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning px-4"> Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button type="submit" class="btn btn-danger px-4"> Delete</button>
        </form>
      </div>
      <% } %>

      <hr class="my-4" />

      <% if(currentUser) { %>
      <h4 class="mb-3"> Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" class="mb-4 needs-validation" novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label fw-semibold">Rating:</label>
          <fieldset class="starability-basic">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <!-- <input type="radio" id="first-rate1" name="review[rating]" value="1" /> -->
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label fw-semibold">Comment:</label>
          <textarea id="comment" name="review[comment]" class="form-control" rows="3" placeholder="Write your review..." required></textarea>
        </div>
        <button class="btn btn-outline-dark px-4">Submit Review</button>
      </form>
      <hr />
      <% } %>
      
      <h5 class="mb-3"> All Reviews</h5>
      <div class="row">
        <% if (listing.reviews && listing.reviews.length > 0) { %>
          <% for (let review of listing.reviews) { %>
            
            <% if (review.author) { %>
              <div class="col-md-6 mb-3">
                <div class="card p-3 shadow-sm border-0 bg-light">
                  <p class="card-text"><b>@<%= review.author.username %> says:</b></p>
                  <p class="card-text"><%= review.comment %></p>
                  <p class="starability-result" data-rating="<%= review.rating %>">
                     Rated <%= review.rating %> out of 5 stars
                  </p>
                  <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                  <form
                    method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  >
                    <button class="btn btn-sm btn-outline-danger">Delete Review</button>
                  </form>
                  <% } %>
                </div>
              </div>
            <% } %>

          <% } %>
        <% } else { %>
          <p class="text-muted">No reviews yet. Be the first to review!</p>
        <% } %>
      </div>
    </div>
  </div>
</div>