<% layout("/layouts/boilerplate") %>
<div class="rwo">
<div class="col-8 offset-2"> 
<form method="POST" action="/listing/<%= foundListing._id %>?_method=PUT">
    <!-- <input name="image[url]" value="<%= foundListing.image.url %>" type="text"> -->
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" class="form-control" value="<%= foundListing.title %>" type="text">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control"> <%= foundListing.description %></textarea>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input name="listing[image]"class="form-control" value="<%= foundListing.image %>" type="text">
    </div>
    <div class="row">
        <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" class="form-control" value="<%= foundListing.price %>" type="number">
    </div>
    <div class="mb-3 col-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" class="form-control" value="<%= foundListing.country %>" type="text">
    </div>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" class="form-control" value="<%= foundListing.location %>" type="text">
    </div>
    <button  class="add-btn" type="submit">Edit</button>
    <br><br>
</form>
</div>
</div>